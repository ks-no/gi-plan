{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://no.ks.fiks.gi.plan.innsyn/Planområder.v2.schema.json",
    "title": "Planområder",
    "definitions": {},
    "type": "object",
    "properties": {
        "planområde": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "område": {
                        "type": "object",
                        "properties": {
                            "koordinatsystem": {
                                "type": "string"
                            },
                            "ytreAvgrensning": {
                                "type": "string"
                            },
                            "vertikallag": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "koordinatsystem",
                            "ytreAvgrensning"
                        ]
                    },
                    "vertikalnivå": {
                        "type": "string",
                        "enum": [
                            "Under grunnen",
                            "På grunnen/vannoverflate",
                            "Over grunnen (bru)",
                            "På bunnen (vann/sjø)",
                            "I vannsøylen"
                        ]
                    },
                    "vertikallag": {
                        "type": "object",
                        "properties": {
                            "lag": {
                                "type": "string"
                            },
                            "referansehøyde": {
                                "type": "object",
                                "properties": {

                                }
                            }
                        }
                    }
                }
            }
        }
    }
}